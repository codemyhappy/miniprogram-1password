/* pages/password-add/password-add.wxss */

.container {
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.input-title{
  padding:20px 0;
  font-size: 20px;
  text-align: center;
}

.input-group {
  position: relative;
  margin-bottom: 15px;
  display: flex;
}
.input-group #platform{
  width: calc(70% - 78px)
}

.input-group label {
  width: 30%;
  font-size: 16px;
  color: #333;
}

.input-group input,.input-group textarea {
  width: 70%;
  height: 40px;
  line-height: 40px;
  padding-left: 8px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

.input-group textarea{
  height:160px;
  padding: 10px 8px;
  /* padding-top:10px; */
  line-height: 1.5 !important;
}

.actions{
  display: flex;
}
.save-button {
  height: 45px;
  background-color: #007bff;
  color: white;
  font-size: 18px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.save-button:hover {
  background-color: #0056b3;
}

.icon-list{
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.icon-list button{
  width:fit-content !important;
  padding: 10px;
  background-color: #007bff;
  color:#fff;
  font-size: 14px;
}
.select-btn{
  width:80px !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  position: absolute;
  right:0;
  top:0;
  /* width: fit-content !important; */
  background-color: aquamarine;
}