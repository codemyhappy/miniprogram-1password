/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 卡片样式 */
.card {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

/* 卡片头部 */
.card-header {
  padding: 24rpx;
  display: flex;
  align-items: center;
}

/* 图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: #eee;
  margin: 0 24rpx;
}

/* 内容区域 */
.section-content {
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
  word-break: break-all;
  overflow-wrap: break-word;
}

/* 列表项样式 */
.section-content > view {
  margin: 16rpx 0;
  display: block;
}

/* 段落样式 */
.section-content > text {
  display: inline-block;
  margin-bottom: 10rpx;
}

/* 强调文字 */
.section-content strong {
  color: #333;
  font-weight: bold;
}

